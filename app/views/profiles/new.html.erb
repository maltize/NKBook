<h1>Dodaj swóją wizytówkę</h1>

<% form_for(@profile) do |f| %>
  <%= f.error_messages %>

  <%= hidden_field_tag :spot_position, params[:spot_position] || @spot_position %>

  <p>
    <%= f.label :url, 'Link do wizytówki:' %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :html, 'Kod html:' %><br />
    <%= f.text_area :html %>
  </p>
  <p>
    <%= f.label :email, 'E-mail:' %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.check_box :tos %>
    <%= f.label :tos, 'Akceptuję regulamin' %>
  </p>
  <p>
    <%= f.submit 'Dodaj' %>
  </p>
<% end %>

<%= link_to 'Cofnij', root_path %>